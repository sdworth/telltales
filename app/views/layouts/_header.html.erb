<% if logged_in? %>
  <div class="header-background">
    <div class="header-wrapper">
      <%= link_to 'TELLTALES', root_path, class: "highlight-text logo" %>
      <span class="dropdown-button"><%= image_tag 'menu-icon.png', class: 'header-icon' %></span>
      <span class="search-button"><%= image_tag 'search.png', class: 'header-icon' %></span>
      <span class="greeting">Welcome, <a href='/users/<%= user.id %>'><%= user.username %></a></span>
    </div>
  </div>

  <div class="search">
    <%= form_tag("/search", method: "get") do %>
      <%= text_field_tag :search, '', class: "textfield" %>
      <%= submit_tag "Search", class: "button" %>
    <% end %>
  </div>

  <div class="header-dropdown-menu">
    <ul class="dropdown-list">
      <li><%= link_to 'New Story', new_start_path %></li>
      <li class="small-greeting"><a href='/users/<%= user.id %>'>My Profile</a></li>
      <li>My Stories</li>
      <li><%= link_to 'Account Settings', edit_user_path(current_user) %></li>
      <li><%= link_to "Logout", session_path, :method => :delete %></li>
    </ul>
  </div>
<% end %>