
<div class="row">
  <div class="sample left"><%= random_story %></div>
  <div class="focus"><h1>WELCOME TO <span class="highlight-text">TELLTALES!</span></h1>

    <p class="intro-text">TellTales allows you to create and add to other user's stories--140 characters at a time. Join
      now and start building your story!</p>
  </div>
  <div class="sample right"><%= random_story %></div>
</div>

<div class="row">
  <div class="sample left"><%= random_story %></div>

  <div class="focus register-block">
    <p><a href= '/' class="highlight-text login">Login</a>

      or

      <span>Register</span> below: </p>

    <%= form_for @user, html: {id: "register-form", autocomplete: :off} do |f| %>
      <div>
        <%= f.label :username %>
        <span class="register-username-error"></span>
        <span class='errors'><%= @user.errors[:username].first if @user.errors[:username] %></span>
        <br>
        <%= f.text_field :username, class: "textfield", autofocus: true %>
        <br>
      </div>
      <div>
        <%= f.label :email %>
        <span class="errors"></span>
        <br>
        <%= f.text_field :email, class: "textfield"%>
        <br>
      </div>
      <div>
        <%= f.label :password %>
        <span class="errors"></span>
        <br>
        <%= f.password_field :password, class: "textfield" %>
        <br>
      </div>
      <div>
        <%= f.label :"confirm password" %>
        <span class="errors"></span>
        <span class="confirm-password-error"></span>
        <br>
        <%= f.password_field :password_confirmation, class: "textfield" %>
        <br>
      </div>

      <div class="login-button-div">
        <%= f.submit "Register", class: 'button', disabled: true %>
      </div>
    <% end %>

  </div>

  <div class="focus login-block">
    <%= @user.errors.full_messages unless @user.errors.full_messages == [] %>

    <p class="error-message"><%= flash[:alert] %></p>

    <p><a href='/' class="highlight-text register">Register</a>

      or

      <span>Login</span> below:</p>

    <%= form_for @user, url: session_path, html: {id: 'login-form', autocomplete: :off} do |f| %>
      <div>
        <%= f.label :username %>
        <span class="errors"></span>

        <br>
        <%= f.text_field :username, class: "textfield", autofocus: true, autocomplete: false %>
      </div>
      <br>

      <div>
        <%= f.label :password %>
        <span class="errors"></span>
        <br>
        <%= f.password_field :password, class: "textfield" %>
      </div>
      <br>

      <div class="login-button-div">
        <%= f.submit "Login", class: 'button', disabled: true %>
      </div>

    <% end %>
  </div>
  <div class="sample right"><%= random_story %></div>
</div>
<div class="row">
  <div class="sample left"><%= random_story %></div>
  <div class="sample square"><%= random_story %></div>
  <div class="sample right"><%= random_story %></div>
</div>